package game2_package;

import java.util.Random;

public class Spawn {
	private Handler handler;
    private HUD hud;
    private int scoreKeep = 0;
    
    public Spawn(Handler handler, HUD hud){
            this.handler = handler;
            this.hud = hud;
    }
    public void tick(){
    scoreKeep++;
    if(scoreKeep >= 250){
    	scoreKeep = 0;
    	hud.setLevel(hud.getLevel() + 1);
    	}
    }
}
