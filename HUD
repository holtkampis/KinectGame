package game2_package;

import java.awt.Graphics;

public class HUD {
      private int score = 0;
      private int level = 1;

      public void tick(){
    	  score++;
      }
      public void render(Graphics g){
    	  g.drawString("Score: " + score, 15, 64);
          g.drawString("Level: " + level, 15, 80);    
      }
      public void score(int score){
              this.score = score;
      }
      public int getScore(){
              return score;
      }
      public int getLevel(){
              return level;
      }
      public void setLevel(int level){
              this.level = level;
      }
}

